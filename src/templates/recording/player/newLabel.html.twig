<div class="modal fade" id="modal-div" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Custom label</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="newLabelForm">
                    <div class="form-group" id="cust_label_group">
                        <label for="cust_label">New Label (Up to 20 characters )</label>
                        <input id="cust_label" name="cust_label" class="form-control" type="text" maxlength="20" title="Up to 20 characters allowed" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="newLabelButton" type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-save"></i>
                    Save</button>
            </div>
        </div>
    </div>
</div>
