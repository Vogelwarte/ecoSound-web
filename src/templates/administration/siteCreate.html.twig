<div class="collapse mb-5" id="siteFormSection">
    <div class="card">
        <div class="card-body">
            <button id="closeForm" class="close" type="button" data-toggle="collapse" data-target="#siteFormSection"
                    aria-expanded="false" aria-controls="siteFormSection">
                <span>&times;</span>
            </button>
            <form id="siteForm" novalidate>
                <div class="form-group">
                    <label for="name" class="col-form-label-sm">Name</label>
                    <input id="name" type="text" name="name_text" class="form-control form-control-sm" maxlength="100" required>
                    <input id="project_id" type="hidden" name="project_id_text" value="{{ projectId }}">
                    <div class="invalid-feedback">
                        Please provide a site name.
                    </div>
                </div>
                <div>
                    <label style="width:50%" class="col-form-label-sm" for="longitude">Longitude [-180,180]</label>
                    <label style="width:49.5%" class="col-form-label-sm" for="latitude">Latitude [-90,90]</label>
                </div>
                <div>
                    <span>
                        <input id="longitude" type="number" min="-180" max="180" step="0.0000000000001" pattern="##.##############" name="longitude_number" style="width:50%" maxlength="100" required>
                    </span>
                    <span>
                        <input id="latitude" type="number" min="-90" max="90" step="0.0000000000001" pattern="##.##############" name="latitude_number" style="width:49.5%" maxlength="100" required>
                    </span>
                </div>
                <div>
                    <span id="invalidLongDiv" class="invalid-feedback">
                        Please provide valid longitude value.
                    </span>
                    <span id="inv4LatDiv" class="invalid-feedback">&nbsp;</span>
                    <span id="invalidLatDiv" class="invalid-feedback">
                        Please provide valid latitude value.
                    </span>
                </div>
                <div>
                    <label for="gadm1" class="col-form-label-sm" style="width:33%">Global Administrative Areas level 1</label>
                    <label for="gadm2" class="col-form-label-sm" style="width:33%">Global Administrative Areas level 2</label>
                    <label for="gadm3" class="col-form-label-sm" style="width:33%">Global Administrative Areas level 3</label>
                </div>
                <div class="form-group">
                    <select id="gadm1" name="gadm1_text" style="width:33%" class="form-control-sm">
                        <option></option>
                        {% for g in gadm1 %}
                            <option value="{{ g.name }}">{{ g.name }}</option>
                        {% endfor %}
                    </select>
                    <select id="gadm2" name="gadm2_text" style="width:33%" class="form-control-sm">
                        <option></option>
                    </select>
                    <select id="gadm3" name="gadm3_text" style="width:33%" class="form-control-sm">
                        <option></option>
                    </select>
                </div>
                <div>
                    <label for="realm" class="col-form-label-sm" style="width:33%">Realm</label>
                    <label for="biome" class="col-form-label-sm" style="width:33%">Biome</label>
                    <label for="functionalGroup" class="col-form-label-sm" style="width:33%">Functional Group</label>
                </div>
                <div class="form-group">
                    <select id="realm" name="realm_id_text" style="width:33%" class="form-control-sm">
                        <option></option>
                        {% for realm in realms %}
                            <option value="{{ realm.explore_id }}">{{ realm.name }}</option>
                        {% endfor %}
                    </select>
                    <select id="biome" name="biome_id_text" style="width:33%" class="form-control-sm">
                        <option></option>
                    </select>
                    <select id="functionalGroup" name="functional_group_id_text" style="width:33%" class="form-control-sm">
                        <option></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="centro" class="col-form-label-sm">Centroid</label>
                    <select id="centro" name="centroid_select-one" class="form-control form-control-sm" required>
                        <option value="true">true</option>
                        <option value="false">false</option>
                    </select>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-save"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
