<div class="collapse mb-5" id="collectionFormSection">
    <div class="card">
        <div class="card-body">
            <button id="closeForm" class="close" type="button" data-toggle="collapse"
                    data-target="#collectionFormSection" aria-expanded="false" aria-controls="collectionFormSection">
                <span>&times;</span>
            </button>
            <form id="collectionForm" novalidate>
                <div class="form-group">
                    <input type="hidden" name="public" value="0">
                    <input type="hidden" name="project_id_hidden" value="{{ projectId }}">
                    <label for="name" class="col-form-label-sm">Collection name</label>
                    <input id="name" type="text" name="name_text" class="form-control form-control-sm" maxlength="100"
                           required>
                    <div class="invalid-feedback">
                        Please provide a collection name.
                    </div>
                </div>
                <div class="form-group">
                    <label for="doi" class="col-form-label-sm">DOI</label>
                    <input id="doi" type="text" name="doi_text" class="form-control form-control-sm" maxlength="100">
                    <div class="invalid-feedback">
                        Please provide the DOI.
                    </div>
                </div>
                <div class="form-group">
                    <label for="note" class="col-form-albel-sm">Description</label>
                    <input id="note" type="text" name="note_text" class="form-control form-control-sm" maxlength="100">
                    <div class="invalid-feedback">
                        Please provide the note.
                    </div>
                </div>
                <div class="form-group">
                    <label for="view" class="col-form-label-sm">View</label>
                    <select id="view" name="view_select-one" class="form-control form-control-sm" required>
                        <option value="gallery">gallery</option>
                        <option value="list">list</option>
                    </select>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-save"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
