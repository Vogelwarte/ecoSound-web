<div class="collapse mb-5" id="projectFormSection">
    <div class="card">
        <div class="card-body">
            <button id="closeForm" class="close" type="button" data-toggle="collapse" data-target="#projectFormSection" aria-expanded="false" aria-controls="projectFormSection">
                <span>&times;</span>
            </button>
            <form id="projectForm" enctype="multipart/form-data" novalidate>
                <div class="form-group">
                    <label for="name" class="col-form-label-sm">Project name</label>
                    <input id="name" type="text" name="name_text" class="form-control form-control-sm" maxlength="100" required>
                    <div class="invalid-feedback">
                        Please provide a project name.
                    </div>
                </div>
                <div class="form-group">
                    <label for="url" class="col-form-label-sm">URL</label>
                    <input id="url" type="url" name="url_text" class="form-control form-control-sm" maxlength="100">
                    <div class="invalid-feedback">
                        Please provide the URL.
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" id="picture" class="btn btn-sm btn-outline-primary">Picture</button>
                    <input type="file" name="picture_id_file" id="picture_id_file" accept="image/*" hidden>
                    <img src="#" id="img" STYLE="display:none;width:200px;padding:5px;border: 1px solid #ddd;margin-top: 15px;"/>
                </div>
                <div class="form-group">
                    <label class="col-form-albel-sm">Description</label>
                    <div class="editor"></div>
                    <input id="description" type="hidden" name="description">
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-save"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $('#picture').click(function () {
        $('#picture_id_file').click();
    });
    $('#picture_id_file').change(function (){
        var reads = new FileReader();
        f = $('#picture_id_file')[0].files[0]
        reads.readAsDataURL(f);
        reads.onload = function (e) {
            document.getElementById('img').src = this.result;
            $("#img").css("display", "block");
        };
    })
</script>