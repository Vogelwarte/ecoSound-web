<div class="modal fade" id="modal-div" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="myPasswdForm">
                    <input name="sscID" type="hidden" value="{{ userId }}">
                    <div class="form-group" id="my_pwd_group">
                        <label for="my_pwd">Old Password</label>
                        <input id="my_pwd" name="my_pwd" class="form-control" type="password" required>
                        <div class="invalid-feedback">
                            Please provide the correct old password.
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="my_new_pwd1">New Password</label>
                        <input id="my_new_pwd1" name="password_password" class="form-control" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                        <div class="invalid-feedback">
                            Please provide a valid password.
                        </div>
                        <small id="passwordHelpBlock" class="form-text text-muted">
                            Min 8 characters long, 1 uppercase letter and 1 number. Special characters allowed.
                        </small>
                    </div>
                    <div class="form-group">
                        <label for="my_new_pwd2">Confirm Password</label>
                        <input id="my_new_pwd2" class="form-control" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                        <div class="invalid-feedback">
                            Passwords do not match.
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="resetButton" type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-save"></i>
                    Save</button>
            </div>
        </div>
    </div>
</div>
