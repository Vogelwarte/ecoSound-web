{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <table id="projectTable" style="display:none">
            <thead class="table-borderless" style="display:none">
            <tr>
                <th></th>
            </tr>
            </thead>
            <tbody class="js-project-list">
            {% for project in projects %}
                <tr>
                    <td style="border-top: 1px solid #dddddd;">
                        <h2 class="mt-4">
                            <a href="{{ baseUrl }}/collection/index/{{ project.id }}">{{ project.name }}</a>
                        </h2>
                        <br>
                        <div class="form-inline">
                            <div class="project-div col-3" style="margin-bottom: auto;">
                                <img class="project-img" src="{{ baseUrl }}/sounds/projects/{{ project.pictureId }}" style="width:300px;float:left">
                            </div>
                            <div class="col-9" style="margin-bottom: auto;">
                                {% autoescape false %}{{ project.description }}{% endautoescape %}
                            </div>
                        </div>
                        {% if project.url %}
                            <br>
                            <a href="{{ project.url }}" target="_blank">{{ project.url }}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function () {
            $('#projectTable').DataTable({
                "pageLength": 8,
                "lengthChange": false,
                "stateSave": true,
                "StateDuration": -1,
                "order": [[0, 'asc']],
            });
            $('#projectTable').show()
        });
        $(window).resize(function () {
            $('.project-img').width($('.project-div').width())
        })
    </script>
{% endblock %}
