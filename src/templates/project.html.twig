{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <table id="projectTable" style="display:none">
            <thead class="table-borderless" style="display:none">
            <tr>
                <th></th>
            </tr>
            </thead>
            <tbody class="js-project-list">
            {% for project in projects %}
                <tr style="vertical-align:top;">
                    <td style="border-top: 1px solid #dddddd;">
                        <h2 class="inline">
                            <a href="{{ baseUrl }}/collection/index/{{ project.id }}">{{ project.name }}</a>
                        </h2>
                        <a href="{{ project.url }}" class="inline" target="_blank">{{ project.url }}</a>
                        <p class="mt-3"><img src="{{ baseUrl }}/sounds/projects/{{ project.pictureId }}" class="rounded" style="width:300px;margin-right:15px;float:left">
                            {% autoescape false %}{{ project.description }}{% endautoescape %}
                        </p>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function () {
            $('#projectTable').DataTable({
                "pageLength": 8,
                "lengthChange": false,
                "stateSave": true,
                "StateDuration": -1,
                "order": [[0, 'asc']],
            });
            $('#projectTable').show()
        });
    </script>
{% endblock %}
